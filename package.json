{
  "publisher": "NickWu",
  "name": "click-install",
  "displayName": "click-install",
  "version": "0.1.2",
  "private": true,
  "description": "A vscode extension that automatically import dependencies for your project.",
  "author": "Nick Wu",
  "license": "MIT",
  "homepage": "https://github.com/wNing50/click-install#README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/wNing50/click-install"
  },
  "bugs": {
    "url": "https://github.com/wNing50/click-install/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "icon.png"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "bumpp": "bumpp",
    "dev": "pnpm build --watch --sourcemap --env.NODE_ENV=dev",
    "pack": "vsce package --no-dependencies --env.NODE_ENV=pro",
    "lint": "eslint . --fix",
    "publish": "vsce publish --no-dependencies --env.NODE_ENV=pro",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.1",
    "@types/node": "^22.13.4",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^10.0.3",
    "eslint": "^9.20.1",
    "find-up": "^7.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "pnpm": "^10.10.0",
    "reactive-vscode": "^0.2.10",
    "tsdown": "^0.9.6",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,ts,json}": "eslint --fix"
  }
}
